<% include layout.ejs %>
<div class="container emp-profile" >
   <form ng-controller="userProfile" ng-init="getUser()" >
      <div class="row">
         <div class="col-md-3 col-xs-12 col-sm-4 col-lg-3">
            <div class="profile-img">
               <img alt="User Pic" src="https://x1.xingassets.com/assets/frontend_minified/img/users/nobody_m.original.jpg" id="profile-image1" class="img-circle img-responsive"> 
               <!-- <div class="file btn btn-lg btn-primary">
                  Change Photo
                  <input type="file" name="file"/>
                  </div>-->
            </div>
         </div>
         <div class="col-md-6 col-xs-12 col-sm-4 col-lg-6" >
            <h1 style="color:#008f95">Profile</h1>
            <hr>
            <div class="profile-head">
               <div class="row">
                  <div class="col-md-5">
                     <p><span class="fa fa-user one" style="width:20px;"></span>First Name</p>
                  </div>
                  <div class="col-md-7">
                     <p class="userValue">{{user.FirstName}}</p>
                  </div>
               </div>
               <div class="row">
                  <div class="col-md-5">
                     <p><span class="fa fa-user one" style="width:20px;"></span>Last Name</p>
                  </div>
                  <div class="col-md-7">
                     <p class="userValue">{{user.LastName}}</p>
                  </div>
               </div>
               <div class="row">
                  <div class="col-md-5">
                     <p><span class="fa fa-venus-mars one" style="width:20px;"></span>Gender</p>
                  </div>
                  <div class="col-md-7">
                     <p class="userValue">{{user.Gender}}</p>
                  </div>
               </div>
               <div class="row">
                  <div class="col-md-5">
                     <p><span class="fa fa-envelope one" style="width:20px;"></span>Email</p>
                  </div>
                  <div class="col-md-7">
                     <p class="userValue">{{user.Email}}</p>
                  </div>
               </div>
               <div class="row">
                  <div class="col-md-5">
                     <p><span class="fa fa-calendar one" style="width:20px;"></span>Date of Birth</p>
                  </div>
                  <div class="col-md-7">
                     <p class="userValue" ng-bind-html="formatDate(user.DateOfBirth)"></p>
                  </div>
               </div>
               <div class="row">
                  <div class="col-md-5">
                     <p><span class="fa fa-mobile one" style="width:20px;"></span>Mobile</p>
                  </div>
                  <div class="col-md-7">
                     <p class="userValue">{{user.Mobile}}</p>
                  </div>
               </div>
               <div class="row">
                  <div class="col-md-5">
                     <p><span class="fa fa-id-card one" style="width:20px;"></span>SSN</p>
                  </div>
                  <div class="col-md-7">
                     <p class="userValue">{{user.SSN}}</p>
                  </div>
               </div>
               <div class="row">
                  <div class="col-md-5">
                     <p><span class="fa fa-briefcase one" style="width:20px;"></span>Employment Status</p>
                  </div>
                  <div class="col-md-7">
                     <p class="userValue">{{user.Employeestatus}}</p>
                  </div>
               </div>
               <!--<ul class="nav nav-tabs" id="myTab" role="tablist">
                  <li class="nav-item">
                      <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">About</a>
                  </li>
                  <li class="nav-item">
                      <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Timeline</a>
                  </li>
                  </ul>--> 
            </div>
         </div>
         <div class="col-md-3 col-sm-4 col-xs-12 col-lg-3 ">
            <button class="profile-edit-btn"  ng-click="goToEdit()" >Edit Profile</button>
         </div>
      </div>
   </form>
</div>
<div class="container pull-right" id="chatbox">
   <div class="row chat-window col-xs-5 col-md-3 pull-right" id="chat_window_1">
      <div class="col-xs-12 col-md-12 col-sm-12">
         <div class="panel panel-default">
            <div class="panel-heading top-bar">
               <div class="row">
                  <div class="col-md-7 col-xs-8 col-sm-8 ">
                     <h3 class="panel-title"><span class="fa fa-comment"></span> Chat</h3>
                  </div>
                  <div class="col-md-4 col-xs-4 col-sm-4 " style="text-align: right;">
                     <a class="min_icon" href="#"><span id="minim_chat_window" class="fa fa-minus icon_minim"></span></a>
                     <!--<a href="#"><span class="fa fa-remove icon_close" data-id="chat_window_1"></span></a>-->
                  </div>
               </div>
            </div>
            <div class="panel-body">
               <div id="messagebody" class="msg_container_base">
               </div>
               <div id="notifyUser"></div>
               <div class="panel-footer">
                  <div class="input-group">
                     <input type="hidden" id="user" value="" />
                     <input id="btn-input" type="text" onkeyup="notifyTyping();" class="form-control input-sm chat_input" placeholder="Write your message here..." required="required" />
                     <span class="input-group-btn">
                     <button class="btn btn-primary btn-sm" id="btn-chat">Send</button>
                     </span>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </div>
</div>
<% include footer.ejs %>
<script src="../../js/profile.js"></script>
<link rel="stylesheet" href="../../css/profile.css">
</body>
</html>