

<% include layout.ejs %>
<div class="container login-container" >
      <div class="row">
         <div class="col-md-12">
            <ul class="nav nav-tabs nav-justified" id="myTab" role="tablist">
               <li class="nav-item">
                  <a class="nav-link active" id="user-tab" data-toggle="tab" href="#user" role="tab" aria-controls="user" aria-selected="true">User</a>
               </li>
               <li class="nav-item">
                  <a class="nav-link" id="admin-tab" data-toggle="tab" href="#admin" role="tab" aria-controls="admin" aria-selected="false">Admin</a>
               </li>
            </ul>
            <div class="tab-content" id="myTabContent" >
               <div class="tab-pane fade show active text-align form-new" id="user" role="tabpanel" aria-labelledby="user-tab">
                  <div class="row justify-content-center">
                     <div class="col-md-6 login-form-1">
                        <h3>User Login</h3>
                        <form class="needs-validation" novalidate ng-controller="loginFormController" id="userLoginForm" ng-init="validate()">
                           <div class="form-group">
                              <input type="text" class="form-control" placeholder="Email *" ng-model="user.email" pattern="^[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$" required />
                              <div class="valid-feedback">
                                 Looks good!
                                </div>
                                <div class="invalid-feedback">
                                  Please provide email / valid email!
                                </div>
                           </div>
                           <div class="alert alert-danger" role="alert" id="email-failed">
                              Please provide valid Email!
                            </div>
                           <div class="form-group">
                              <input type="password" class="form-control" placeholder="Password *" ng-model="user.password" pattern="((?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[\W_]).{5,20})"  required />
                              <div class="valid-feedback">
                                 Looks good!
                                </div>
                                <div class="invalid-feedback">
                                  Please provide password / valid password!
                                </div>
                           </div>
                           
                            <div class="alert alert-danger" role="alert" id="password-failed">
                              Please provide valid password!
                            </div>
                            <div class="alert alert-danger" role="alert" id="activate-failed">
                              Please verify the email. Please check your mail to confirm.
                            </div>
                           <div class="form-group">
                              <input type="submit" class="btnSubmit" value="Login" />
                           </div>
                           <div class="form-group">
                              <a href="/forgotpassword" class="ForgetPwd">Forgot Password?</a>
                           </div>
                        </form>
                        <h6 class="account"> Dont you have an account? Please register for a new account! </h6>
                        <div class="login_section">
                           <div class="form-group login_btn">
                              <input type="button" class= "loginBtn" onclick="location.href='/register'" value="Register" />
                           </div>
                        </div>
                     </div>
                  </div>
               </div>
               <div class="tab-pane fade show text-align form-new" id="admin" role="tabpanel" aria-labelledby="admin-tab">
                  <div class="row justify-content-center" >
                     <div class="col-md-6 login-form-2">
                        <h3>Admin Login</h3>
                        <form class="needs-validation form_section" id="adminLogin" novalidate  ng-controller="adminFormController" >
                           <div class="form-group">
                              <input type="email" class="form-control" placeholder="Username *" ng-model="admin.email" pattern="^[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$" required />
                              <div class="valid-feedback">
                                 Looks good!
                                </div>
                                <div class="invalid-feedback">
                                  Please provide username / valid username!
                                </div>
                                <div class="alert alert-danger" role="alert" id="adminemail-failed">
                                    Please provide valid Email!
                                  </div>
                           </div>
                           <div class="form-group">
                              <input type="password" class="form-control" id="myPassword" pattern="((?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[\W_]).{5,20})" ng-model="admin.password" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" placeholder="password" required />
                              <div class="valid-feedback">
                                 Looks good!
                                </div>
                                <div class="invalid-feedback">
                                  Please provide password / valid password!
                                </div>
                                <div class="alert alert-danger" role="alert" id="adminpassword-failed">
                                    Please provide valid password!
                                  </div>
                           </div>
                           <div class="form-group">
                              <input type="submit" class="btnSubmit" value="Login" />
                           </div>
                           <div class="form-group">
                              <a href="/forgotpassword" class="ForgetPwd">Forgot Password?</a>
                           </div>
                        </form>
                     </div>
                  </div>
               </div>
               <div class="loading" id="spinner">
                  <div class="loader"></div>
              </div>
               <div id="myModal" class="modal fade">
                  <div class="modal-dialog modal-confirm">
                     <div class="modal-content">
                        <div class="modal-header">
                           <div class="icon-box">
                              <i class="material-icons">&#xE876;</i>
                           </div>				
                           <h4 class="modal-title">Success!</h4>	
                        </div>
                        <div class="modal-body">
                           <p class="text-center">You have loggged in succesfully</p>
                        </div>
                        <div class="modal-footer">
                           <button class="btn btn-success btn-block" data-dismiss="modal">OK</button>
                        </div>
                     </div>
                  </div>
               </div> 
            </div>
         </div>
      </div>
   </div>

    <% include footer.ejs %>
    <script src="../../js/login.js"></script>
</body>
</html>